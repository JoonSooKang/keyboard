<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.androidtown.catchbug"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <org.androidtown.catchbug.MyView android:background="#ffffff" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="20dp" android:paddingBottom="40dp"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5" app:exampleString="Hello, MyView"
        app:exampleDrawable="@android:drawable/ic_menu_add"
        android:id="@+id/myView" />

    <Button
        android:layout_width="106dp"
        android:layout_height="77dp"
        android:text="change direction"
        android:id="@+id/directionButton"
        android:layout_gravity="left|bottom"
        android:background="#a9a2a0" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="66dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ScoreView"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="201dp"
        android:layout_height="97dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/gameOver"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="96dp"
        android:layout_height="66dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/stageView"
        android:layout_gravity="right|top" />

</FrameLayout>
